<% include ../partials/header %>
<% include ../partials/profilheader %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Settings</h1>
        
        <div style="width: 30%; margin: 25px auto;">
            <form action="/<%= currentUser.username %>/settings?_method=PUT" method="POST">
                <div class="form-group">
                    <% console.log(brukeren)%>
                    <% console.log(brukeren.etterNavn) %>
                    
                    <input class="form-control" type="text" name="brukeren[forNavn]" value=<%= brukeren.forNavn%>>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="brukeren[etterNavn]" value=<%= brukeren.etterNavn%>>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="brukeren[email]" value=<%= brukeren.email%>>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="brukeren[avatar]" value=<%= brukeren.avatar%>>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
</div>





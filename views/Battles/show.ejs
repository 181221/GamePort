<% include ../partials/header %>
<style>
  .skiftFarge {
    backgroundColor: green;
  }
</style>
<div class="ui container">
<table class="ui selectable inverted table">
  <thead>
    <tr>
      <th>Game</th>
      <th>Challenger</th>
      <th>Oppenent</th>
      <th class="right aligned">Score C</th>
      <th class="right aligned">Score O</th>
    </tr>
  </thead>
  <tbody>
    <% for(var i = 0; i < battle.length; i ++){ %>
    <tr>
      <% var challengerScore = battle[i].utfordrer.score;%>
      <% var opponentScore = battle[i].motstander.score;%>
      <td><span><a href="#"> <%= i %> </a></span><%= ": " + battle[i].spill.navn  %></td>
      <td><%= battle[i].utfordrer.username; %></td>
      <td><%= battle[i].motstander.username; %></td>
      <td class="right aligned"><%= challengerScore %></td>
      <td class="right aligned"><%= opponentScore %></td>
      <% } %>
    </tr>
    
  </tbody>
  
</table>
<table class="ui inverted table">
  <thead>
    <tr>
      <th>Games</th>
      <th>Wins</th>
      <th>Losses</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%=battle.length%></td>
      <td></td>
      <td></td>
    </tr>
  </tbody>
</div>














